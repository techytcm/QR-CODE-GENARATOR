# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/qr-generator
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/qr-generator?retryWrites=true&w=majority

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
QR_GENERATION_LIMIT=50

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Analytics
ENABLE_ANALYTICS=true

# Optional: URL Shortening
ENABLE_URL_SHORTENING=false
SHORT_URL_DOMAIN=http://localhost:3000/s/

# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here-change-in-production

# Logging
LOG_LEVEL=info
